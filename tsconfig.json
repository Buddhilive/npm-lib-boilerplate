{
  "compilerOptions": {
    "lib": ["es6", "es2021", "esnext"],
    "target": "es2021",
    "module": "es2022",
    "moduleResolution": "node",
    "outDir": "dist",
    "declaration": true,
    "declarationMap": true,
    "inlineSources": true,
    "allowJs": true,
    "noImplicitAny": true,
    "sourceMap": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist/**/*"]
}
